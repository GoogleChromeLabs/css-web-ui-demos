---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Carousel Gallery">
  <section>
    <header>
      <h2>Vertical List</h2>
      <div class="tags">
        <span>Scroll Buttons</span>
        <span>Scroll Markers</span>
        <span>Scroll-State Queries</span>
        <span>Anchor</span>
      </div>
      <!-- move tabindex=0 to another demo -->
      <p>A basic vertical carousel example with scroll buttons and markers.</p>
    </header>

    <ul class="carousel --vertical scroll-markers scroll-buttons">
      <li><p>1</p></li>
      <li><p>2</p></li>
      <li><p>3</p></li>
      <li><p>4</p></li>
      <li><p>5</p></li>
      <li><p>6</p></li>
      <li><p>7</p></li>
      <li><p>8</p></li>
      <li><p>9</p></li>
      <li><p>10</p></li>
      <li><p>11</p></li>
      <li><p>12</p></li>
      <li><p>13</p></li>
      <li><p>14</p></li>
      <li><p>15</p></li>
      <li><p>16</p></li>
    </ul>
  </section>
</Layout>

<style>
  .carousel {
    /* Reset list styles */
    list-style-type: none;
    counter-reset: item;

    /* Styles and layout */
    block-size: 50svh;
    max-inline-size: var(--size-content-2);

    display: grid;
    grid-auto-flow: row;
    gap: var(--size-4);

    &::before,
    &::after {
      content: "";
      display: block;
      block-size: 85cqi;
    }

    & > li {
      background: light-dark(white, var(--surface-2));
      padding: 0;

      display: inline-flex;
      place-items: center;
      place-content: center;

      aspect-ratio: var(--ratio-landscape);

      border: 1px solid var(--surface-3);
      box-shadow: var(--shadow-2);
      border-radius: var(--radius-2);

      > p {
        font-family: var(--font-antique);
        font-size: var(--font-size-5);
        transition: font-size 1s var(--ease-spring-4);
      }

      @container scroll-state(snapped: block) {
        > p {
          color: var(--link);
          font-size: var(--font-size-7);
        }
      }

      /* todo: maybe remove? */
      &:focus {
        outline: 2px solid var(--link);
        outline-offset: -2px;
      }
    }
  }

  section > header {
    padding-inline: 0;
  }
</style>
