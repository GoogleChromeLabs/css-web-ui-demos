  <style>
    ul {
      /* Reset list styles */
      list-style-type: none;
      counter-reset: item;
      margin-block-end: var(--size-5);
      padding-inline: 0;

      inline-size: 30ch;

      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: 100%;
      gap: var(--size-5);

      &::scroll-marker-group {
        grid-auto-columns: 10px;
        left: calc(anchor(left) - 5px);
        right: auto;
        inline-size: max-content;
      }

      &::before,
      &::after {
        content: "";
        display: block;
      }

      & > li {
        scroll-snap-align: center;

        inline-size: inherit;
        padding: 0;
        display: grid;
        gap: var(--size-2);

        > h3 {
          font-size: var(--font-size-4);
          font-weight: 200;
        }

        > p {
          display: flex;
          gap: 1ch;
          place-items: center;
          color: var(--text-2);
        }

        &::scroll-marker {
          background: var(--surface-4);
        }

        &::scroll-marker:target-current {
          background: var(--text-1);
          border-color: var(--text-1);
        }
      }
    }

    section {
      padding: 5vmin;

      & > header {
        padding: 0;
      }
    }
  </style>
</Layout>
